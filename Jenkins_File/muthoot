pipeline {
  agent any
  triggers {
    GenericTrigger(
     genericVariables: [
      [key: 'ref', value: '$.ref']
     ],

     causeString: 'Triggered on $ref',

     token: 'NEW_PIPE',
     tokenCredentialId: '',

     printContributedVariables: true,
     printPostContent: true,

     silentResponse: false,

     regexpFilterText: 'refs/heads/develop',
     regexpFilterExpression: 'refs/heads/' + BRANCH_NAME
    )
  }
  stages {
    stage('Validation') {
      steps {
        sh "echo Validation"
      	   }
    }

    stage('Build') {
      steps {
	 dir('src')
        	{       
		sh 'docker build -t discount.api .'
        	}

      }
    }
    stage('Deploy') {
      steps {

	 dir('src')
	        {       
		sh '/home/arul/MUTHOOT/CUSTOM/DOCKER_COMPOSE/stopbyname.sh catalog.api'	
		sh 'docker run -d --env-file env.discount.api  -p "8002:80"  --name discount.api  discount.api'
        	echo 'Deploy completed '  
        	}

      	}
    		}
  	}
}
